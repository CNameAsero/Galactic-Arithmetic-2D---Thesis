script/source = "extends Node2D

@onready var player = $\"../slime_player_joystik\"
@onready var cam = $\".\"
@onready var btn_camera = $btn_camera
@onready var joystick = $joystick
@onready var default_zoom = cam.zoom
@onready var default_pos = cam.position
@onready var joystick_pos = joystick.position
@onready var btn_pos = btn_camera.position
@onready var clear_btn = $clear_btn
@onready var health_system = $health_system
@onready var clear_btn_default_pos = clear_btn.position
@onready var health_system_default_pos = health_system.position

var pressed
var speed = 2.0


func _process(delta):
	if pressed:
		cam.global_position = lerp(cam.global_position, player.global_position, speed * delta)
		cam.limit_bottom = 
		
		btn_camera.global_position.x = lerp(btn_camera.global_position.x, cam.global_position.x + 650, 50 * delta)
		btn_camera.global_position.y = lerp(btn_camera.global_position.y, cam.global_position.y - 250, 50 * delta)
		
		joystick.global_position.x = lerp(joystick.global_position.x, cam.global_position.x - 550, 50 * delta)
		joystick.global_position.y = lerp(joystick.global_position.y, cam.global_position.y + 250, 50 * delta)
		
		clear_btn.global_position.x = lerp(clear_btn.global_position.x, cam.global_position.x + 475, 50 * delta)
		clear_btn.global_position.y = lerp(clear_btn.global_position.y, cam.global_position.y + 175, 50 * delta)
		
		health_system.global_position.x = lerp(health_system.global_position.x, cam.global_position.x - 1150, 50 * delta)
		health_system.global_position.y = lerp(health_system.global_position.y, cam.global_position.y - 650, 50 * delta)
	else:
		btn_camera.position = btn_pos
		joystick.position = joystick_pos
		clear_btn.position = clear_btn_default_pos
		health_system.position = health_system_default_pos

func _on_btn_camera_toggled(button_pressed):
	if button_pressed:
		cam.zoom = Vector2(1.25,1.25)
		pressed = true

	else:
		cam.zoom = default_zoom
		cam.position = default_pos
		pressed = false
"

